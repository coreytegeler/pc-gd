<div id="delete">
	<div class="vert_center">
		<div class="popup" <%= color('bg', palette.primary_color, 'color', palette.secondary_color, 'border', palette.secondary_color) %> >
			<div class="inner">
				<div class="vert_center">
					<h1>
						Are you sure you want to delete this palette?
					</h1>

					<div class="decision">
						<%= form_for(:palette, :url => {:action => 'destroy', :id => palette.id}) do |f| %>
							<%= submit_tag "YES" %>
						<% end %>
						<%= submit_tag("NO", :id => 'close', :onClick => "$('#delete').remove()") %>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>