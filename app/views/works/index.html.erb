<h1>
	<%= link_to("+", {:action => 'new', :person_id => @person.id}, :class => 'action new symb') %>
	<%= pluralize(@works.size, "Work") %>
</h1>
<ul id="works">
	<% @works.each do |work| %>
		<li>
			<%= work.position %> &nbsp;
			<strong><%= work.title %></strong>
			(<i><%= work.slug %></i>)
			by <%= work.person.name %>
			<%#= work.visible ? 'Visible' : 'Invisible' %>
			<%#= work.person.name %>
			<%= link_to("Show", {:action => 'show', :id => work.id, :person_id => @person.id}, :class => 'action show') %> &nbsp;
			<%= link_to("Edit", {:action => 'edit', :id => work.id, :person_id => @person.id}, :class => 'action edit') %> &nbsp;
			<%= link_to("Delete", {:action => 'delete', :id => work.id, :person_id => @person.id}, :class => 'action delete') %>
		</li>
	<% end %>
</ul>