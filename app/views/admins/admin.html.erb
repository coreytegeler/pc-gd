<section class="masonry big" id="admins">

	<div class="admin block">
		<%= form_for(@new_admin, :url => {:action => 'create', :id => @new_admin.id}, :html => { :id => @new_admin.position.to_s, :class => 'new', :method => :post}) do |f| %>
			<%= render(:partial => "form", :locals => {:admin => @new_admin, :f => f, :disabled => false}) %>
		<% end %>
	</div>

	<div class="admin block">
		<%= form_for(@this_admin, :url => {:action => 'update', :id => @this_admin.id}, :html => { :id => @this_admin.position.to_s, :method => :post}) do |f| %>
			<%= render(:partial => "form", :locals => {:admin => @this_admin, :f => f, :disabled => false}) %>
		<% end %>
	</div>

	<% @admins.each do |admin| %>
		<% if admin.id != @this_admin.id %>
			<div class="admin block">
				<%= form_for(admin, :url => {:action => 'update', :id => admin.id}, :html => { :id => admin.position.to_s, :method => :post}) do |f| %>
					<%= render(:partial => "form", :locals => {:admin => admin, :f => f, :disabled => true}) %>
				<% end %>
			</div>
		<% end %>
	<% end %>
</section>