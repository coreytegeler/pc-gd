<section class="masonry big" id="admins">

	<div class="admin block">
		<%= form_for(@new_admin, :url => {:action => 'create', :id => @new_admin.id}, :html => { :id => @new_admin.position.to_s, :method => :post}) do |f| %>
			<%= render(:partial => "form", :locals => {:admin => @new_admin, :f => f}) %>
		<% end %>
	</div>

	<% @admins.each do |admin| %>
		<div class="admin block">
			<%= form_for(admin, :url => {:action => 'update', :id => admin.id}, :html => { :id => admin.position.to_s, :method => :post}) do |f| %>
				<%= render(:partial => "form", :locals => {:admin => admin, :f => f}) %>
			<% end %>
		</div>
	<% end %>
	
</section>