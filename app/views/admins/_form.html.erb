<% @form_object = @admin %>
<% @new = !@admin.persisted? %>

<%= f.label(:first_name) %>
<%= f.text_field(:first_name) %>

<%= f.label(:last_name) %>
<%= f.text_field(:last_name) %>

<%= f.label(:email) %>
<%= f.text_field(:email) %>

<% if @new %>
	<%= f.label('Confirm email') %>
	<%= f.text_field(:email_confirmation) %>
<% end %>

<%= f.label(:password) %>
<%= f.password_field(:password) %>

<%= f.label(:password_confirmation) %>
<%= f.password_field(:password_confirmation) %>
