<div id="delete">
	<div class="vert_center">
		<div class="popup">
			<div class="inner">
				<div class="vert_center">
					<h1>
						Are you sure you want to delete this <%= resource.name %>?
					</h1>

					<div class="decision">
						<%= form_for(:resource, :url => {:action => 'destroy', :id => resource.id}) do |f| %>
							<%= submit_tag("YES") %>
						<% end %>
						<%= submit_tag("NO", :id => 'close', :onClick => "$('#delete').remove()") %>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>