<section class="masonry swapper" id="resources">
	<% @resources.each do |resource| %>
		<div class="resource block">
			<div class="text title">
				<%= link_to resource.name, resource.link, :target => '_blank' %>
			</div>
			<div class="text website hidden">
				<%= link_to resource.link, resource.link, :target => '_blank' %>
			</div>
			<div class="image hidden">
				<%= link_to image_tag(resource.image(:medium)), resource.link %>
			</div>
		</div>
	<% end %>
</section>