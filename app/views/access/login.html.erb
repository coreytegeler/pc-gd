<section id="login">
	<% @page_title = 'Admin login' %>

	<h1>Are you allowed to do that?</h1>

	<%= form_tag(:action => 'attempt_login') do %>

		<%= text_field_tag(:email, nil, :placeholder => "Email") %>

		<%= password_field_tag(:password, nil, :placeholder => "password") %>

		<%= submit_tag("Login") %>

	<% end %>

	<h1>Prove it.</h1>

</section>