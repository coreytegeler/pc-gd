<% @page_title = 'Admin login' %>

<h1>Are you supposed to be here? Prove it.</h1>

<%= form_tag(:action => 'attempt_login') do %>

	<%= label_tag(:username) %>
	<%= text_field_tag(:username) %>

	<%= label_tag(:password) %>
	<%= password_field_tag(:password) %>

	<%= submit_tag("Login") %>

<% end %>