<% @form_object = @post %>

<%= f.label(:title) %>
<%= f.text_field(:title) %>

<%= f.label(:category) %>
<%= f.select(:category, @groups.map {|g| [g.name, g.id]}) %>

<%= f.label(:position) %>
<%= f.select(:position, 1..@posts_count) %>

<%= f.label(:visible) %>
<%= f.check_box(:visible) %>

<%= f.label(:content_type) %>
<%= f.select(:content_type, [['text'], ['HTML']]) %>

<%= f.label(:content) %>
<%= f.text_area(:content) %>

<%= f.label(:image) %>
<%= f.file_field(:image) %>