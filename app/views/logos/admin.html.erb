<% if admin? %>
	<div id="instructions">
		Only SVGs are allowed. Create a square file of any size with the P contained against the edges. Simplify the vector as much as possible, no strokes.
	</div>
<% end %>
<section class="masonry" id="logoContainer">
	<div class="block logo upload">
		<%= form_for(@new_logo, :url => {:action => 'create', :id => @new_logo.id}, :html => { :id => @new_logo.position.to_s, :class => 'new', :method => :post}) do |f| %>
			<%= render(:partial => "form", :locals => {:logo => @new_logo, :f => f}) %>
		<% end %>
	</div>
	<% @logos.each_with_index do |logo, i| %>
		<div class="block logo upload">
			<%= form_for(logo, :url => {:action => 'update', :id => logo.id}, :html => { :id => logo.position.to_s, :method => :post}) do |f| %>
				<%= render(:partial => "form", :locals => {:logo => logo, :f => f}) %>
			<% end %>
		</div>
	<% end %>
</section>