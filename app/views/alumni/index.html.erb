<h1 id="page_title">Work</h1>
<section class="clear" id="alumni">
	<div class="block">
		<div class="stack">
			<% @alumni.each_with_index do |alumnus, index| %>
				<% @shift = 5 * index %>
				<div class="alumnus" style="bottom: <%= @shift %>px; left: <%= @shift %>px;">
					<h3><%= alumnus.name %></h3>
					<div class="image_wrapper">
						<%= image_tag alumnus.image.url(:medium) %>
					</div>
				</div>
			<% end %>
		</div>
	</div>
</section>