<h1>
	<%= link_to("\u2B05", {:action => 'index'}, :class => 'back-link symb') %>
	Are you sure you want to delete <u><%= @student.name %></u>?
</h1>
<%= form_for(:student, :url => {:action => 'destroy', :id => @student.id}) do |f| %>
	<%= submit_tag("YES") %>
<% end %>
<ul>
	<li><%= @student.people.size %></li>
	<li><%= @student.visible ? 'Visible' : 'Invisible' %></li>
	<li>Created at <%= @student.created_at %></li>
	<li>Last updated at <%= @student.updated_at %></li>
</ul>
